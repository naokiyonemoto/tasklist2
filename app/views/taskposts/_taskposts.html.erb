<ul class="media-list">
  <% taskposts.each do |taskpost| %>
  <li class="media">
    <div class="media-left">
      <img class="media-object img-rounded" src="<%= gravatar_url(taskpost.user, options = { size: 30 }) %>" alt="">
    </div>
    <div class="media-body">
      <div>
        <%= link_to taskpost.user.name,user_path(taskpost.user) %>
        <span class="text-muted">投稿日時<%= taskpost.created_at.in_time_zone('Tokyo') %></span>
      </div>
      <div>
        <p><%= taskpost.content %></p>
      </div>
      <div>
        <% if current_user == taskpost.user %>
          <%= link_to "削除",taskpost,method: :delete, data:{confirm:"削除していいですか？"},class:"btn btn-danger btn-xs" %>
        <% end %>
      </div>
    </div>
  </li>
  <% end %>
  <% paginate taskposts %>
</ul>